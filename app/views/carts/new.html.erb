<h1>Build a new cart</h1>

<%= form_for @cart, url: carts_path(@cart) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %> 
  <br>
  <br>
  <%= f.label "Due Date" %><br>
  <%= f.date_field :expiry %>
  <br>
  <br>
  <%= f.label :street_address %><br>
  <%= f.text_field :street_address, placeholder: current_user.street_address %><br>
  <%= f.text_field :street_address2, placeholder: current_user.street_address2 %>
  <br>
  <br>
  <%= f.label :country %><br>
  <%= f.text_field :country, placeholder: current_user.country %>
  <br>
  <br>
  <%= f.label :city %><br>
  <%= f.text_field :city, placeholder: current_user.city %>
  <br>
  <%= f.label :province %><br>
  <%= f.text_field :province, placeholder: current_user.province %>
  <br>
  <%= f.label :zip_code %><br>
  <%= f.text_field :zip_code, placeholder: current_user.zip_code %><br>
  <%= f.submit "Submit" %>
<% end %>


