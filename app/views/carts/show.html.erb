<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>

<!-- <%= @cart.cart_roles %> -->
<h2>CDN$ <%= @cart_total %></h2>

<h1>List of products</h1>
<ul id="product-list">
  <% @products.each do |product| %>
    <li><h2><%= link_to product.display_name, product.url %> <%= @amazon.find{ |i| i["ASIN"] == product.external_id }["OfferSummary"]["LowestNewPrice"]["FormattedPrice"] %> x <%= product.quantity %></h2></li>
  <% end %>
</ul>
<%= link_to 'Add product', new_cart_products_path %>
<hr>

<h1>List of contributors</h1>
<% @current_users.uniq.each do |user| %>
  <%= user.name %><br>
<% end %>
<br>
<button data-key= <%= @cart.key %> class="FBInvite">Invite through Facebook</button>

<a href="/invite/<%= @cart.key %>">Invite Link</a>