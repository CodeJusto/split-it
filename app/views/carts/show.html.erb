<h1>List of products</h1>
<ul id="product-list">
  <% @products.each do |product| %>
    <li><a href="<%= product_path(product) %>"><%= product.display_name %></a></li>
  <% end %>
</ul>
<%= link_to 'Add product', new_cart_products_path %>
<hr>

<h1>List of contributors</h1>
<% @current_users.uniq.each do |user| %>
  <%= user.name %><br>
<% end %>
<br>
<button data-key= <%= @cart.key %> class="FBInvite">Invite through Facebook</button>

<a href="/invite/<%= @cart.key %>">Invite Link</a>