<div class="row">
  <div class="col s12 center-align">
    <h1>Ahoy, <%= current_user.name %>!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <ul class="col s12 cart-list">
        <!-- the loop -->
        <% if current_user && @carts.size > 0 %>
          <% @carts.each do |cart|  %>
            <li class="col s12">
              <%= render 'list_carts', cart: cart %>
            </li>
          <% end %>
        <% end %>
    </ul>
  </div>
</div>
  
<a href="#new-cart-modal" class="btn-floating btn-large waves-effect waves-light pink modal-trigger" id="new-cart-btn"><i class="material-icons">add</i></a>


<!-- render 'new_cart' -->
<!-- new cart modal -->
  <div id="new-cart-modal" class="modal">
    <div class="modal-header center-align">
      <h4>New Cart</h4>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat"><i class="material-icons">clear</i></a>
    </div>
    
    <div class="modal-content">
      <div class="row">
        <!-- <form class="col s12"> -->
        <%= form_for @cart, url: carts_path(@cart), class: "col s12" do |f| %>
          <!-- name field -->
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :name %> 
              <%= f.label "Cart Name" %>
            </div>
          </div>
          <!-- min. payment field -->
          <div class="row">
            <div class="input-field col s12">
              <%= f.number_field :minimum_payment %>
              <%= f.label "Minimum Payment $" %>
            </div>
          </div>
          <!-- due day -->
          <div class="row">
            <div>
              <%= f.date_field :expiry, class: "datepicker" %>
              <%= f.label "Due Date" %>
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button class="btn waves-effect waves-light" type="submit" name="action">Sign in
              </button>
              <%= f.submit "Submit" %>
            </div>
          </div>
        <!-- </form> -->
        <% end %>
      </div>
    </div>

  </div>