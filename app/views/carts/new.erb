<div>
  <div class="modal-header center-align">
    <h4>New Cart</h4>
  </div>
  
  <div class="modal-content">
    <div class="row">
      <!-- <form class="col s12"> -->
      <%= form_for @cart, url: carts_path(@cart), class: "col s12" do |f| %>
        <!-- name field -->
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :name %> 
            <%= f.label "Cart Name" %>
          </div>
        </div>
        <!-- min. payment field -->
        <div class="row">
          <div class="input-field col s12">
            <%= f.number_field :minimum_payment %>
            <%= f.label "Minimum Payment $" %>
          </div>
        </div>
        <!-- due day -->
        <div class="row">
          <div class="input-field col s12">
            <input type="date" class="datepicker" id="cart_expiry" name="cart[expiry]">
            <%= f.label "Due Date" %>

          </div>
        </div>
        <div class="row">
          <div class="col s12 right-align">
            <%= f.submit "Submit", class: "btn waves-effect waves-light" %>
          </div>
        </div>
      <!-- </form> -->
      <% end %>
    </div>
  </div>
</div>