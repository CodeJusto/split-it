<section id="hero">
  <div class="logo">
    <h3>LOGO</h3>
  </div>
  <div class="sign-in-btn">
    <a class="waves-effect waves-light btn modal-trigger" href="#sign-in-modal">Sign In</a>
  </div>
  <div class="cta">
    <h1>Split it!</h1>
    <h5>Thank you for taking the time to read this gibberish.</h5>
    <a class="waves-effect waves-light btn-large modal-trigger" href="#sign-up-modal">GET STARTED</a>
  </div>

  <!-- sign up modal -->
  <div id="sign-up-modal" class="modal">
    <div class="modal-header">
      <h4>Sign Up</h4>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat"><i class="material-icons">clear</i></a>
    </div>
    <div class="modal-content center-align">
      <button class="btn btn-facebook waves-effect waves-light" type="submit" name="action">
        <i class="material-icons left">send</i> Connect with Facebook
      </button>
    </div>
    <div class="modal-content">
      <div class="row">
        <form class="col s12">
          <!-- name field -->
          <div class="row">
            <div class="input-field col s12">
              <input id="name" type="text" class="validate">
              <label for="name">Full name</label>
            </div>
          </div>
          <!-- email field -->
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="text" class="validate">
              <label for="email">Email</label>
            </div>
          </div>
          <!-- password field -->
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button class="btn waves-effect waves-light" type="submit" name="action">Sign up
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer center-align">
      <p>By signing up you agree to our Terms of Use and Privacy Policy.</p>
    </div>
  </div>

  <!-- sign in modal -->
  <div id="sign-in-modal" class="modal">
    <div class="modal-header center-align">
      <h4>Sign In</h4>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat"><i class="material-icons">clear</i></a>
    </div>
    <div class="modal-content center-align">
      <button class="btn btn-facebook waves-effect waves-light" type="submit" name="action">
        <i class="material-icons left">send</i> Connect with Facebook
      </button>
    </div>
    <div class="modal-content">
      <div class="row">
        <form class="col s12">
          <!-- email field -->
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="text" class="validate">
              <label for="email">Email</label>
            </div>
          </div>
          <!-- password field -->
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button class="btn waves-effect waves-light" type="submit" name="action">Sign in
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer center-align">
      <p>By signing up you agree to our Terms of Use and Privacy Policy.</p>
    </div>
  </div>
</section>


<section class="container">
</section>


<% if current_user %>
<h3>Create a new gift</h3>
  <%= render 'new_cart' %>

  <% if @carts.size > 0 %>
    <% @carts.each do |cart|  %>
      <%= render 'list_carts', cart: cart %>
    <% end %>
  <% end %>
<% end %>
