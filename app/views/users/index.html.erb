<section id="hero">
  <div class="logo">
    <h3>Tucan</h3>
  </div>
  <div class="sign-in-btn">
    <a class="waves-effect waves-light btn modal-trigger" href="#sign-in-modal">Sign In</a>
  </div>
  <div class="cta">
    <h1>Split it!</h1>
    <h5>Thank you for taking the time to read this gibberish.</h5>
    <a class="waves-effect waves-light btn-large modal-trigger" href="#sign-up-modal">GET STARTED</a>
  </div>

  <!-- sign up modal -->
  <div id="sign-up-modal" class="modal">
    <div class="modal-header">
      <h4>Sign Up</h4>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat"><i class="material-icons">clear</i></a>
    </div>
    <div class="modal-content center-align">
      <a href="/auth/facebook">
      <button class="btn btn-facebook waves-effect waves-light" type="submit" name="action">
        <i class="material-icons left">send</i> Connect with Facebook
      </button>
      </a>
    </div>
    <div class="modal-content">
      <div class="row">
        <%= form_for @user do |f| %>
          <!-- name field -->
          <div class="row">
            <div class="input-field col s12">
              <%= text_field_tag :name %>
              <label for="name">Full name</label>
            </div>
          </div>
          <!-- email field -->
          <div class="row">
            <div class="input-field col s12">
              <%= text_field_tag :email %>
              <label for="email">Email</label>
            </div>
          </div>
          <!-- phone field -->
          <div class="row">
            <div class="input-field col s12">
              <%= text_field_tag :number %>
              <label for="email">Phone</label>
            </div>
          </div>
          <!-- password field -->
          <div class="row">
            <div class="input-field col s12">
              <%= password_field_tag :password %>
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button class="btn waves-effect waves-light" type="submit" name="action">Sign up
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer center-align">
      <p>By signing up you agree to our Terms of Use and Privacy Policy.</p>
    </div>
  </div>

  <!-- sign in modal -->
  <div id="sign-in-modal" class="modal">
    <div class="modal-header center-align">
      <h4>Sign In</h4>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat"><i class="material-icons">clear</i></a>
    </div>
    <div class="modal-content center-align">
      <a href="/auth/facebook">
      <button class="btn btn-facebook waves-effect waves-light" type="submit">
        <i class="material-icons left">send</i> Connect with Facebook
      </button>
      </a>
    </div>
    <div class="modal-content">
      <div class="row">
        <%= form_tag(sessions_path, method: "post", class:"col s12") do %>
          <!-- email field -->
          <div class="row">
            <div class="input-field col s12">
              <%= text_field_tag :email %>
              <label for="email">Email</label>
            </div>
          </div>
          <!-- password field -->
          <div class="row">
            <div class="input-field col s12">
              <%= password_field_tag :password %>
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="col s12 right-align">
              <button class="btn waves-effect waves-light" type="submit">Sign in
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer center-align">
      <p>By signing up you agree to our Terms of Use and Privacy Policy.</p>
    </div>
  </div>
</section>