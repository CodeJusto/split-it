  <h3 class= "registration-title">Register</h3>
  <div>
    <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> 
    <%= f.label :Email %>
    <%= f.text_field :email, placeholder: @email %> 
    <%= f.label :number %>
    <%= f.text_field :number %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit %>
    <% end %>
  </div>

